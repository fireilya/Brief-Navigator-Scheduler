{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore.Hosting.Diagnostics": "Information",
        "Microsoft.Hosting.Lifetime": "Information",
        "Manager.Core.AppConfiguration.DataBase.DbContextConfiguratorBase": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "formatter": {
            "type": "Serilog.Templates.ExpressionTemplate, Serilog.Expressions",
            "template": "{@t:yyyy-MM-dd hh:mm:ss,fff} {@l}{#if @tr is not null} [T-{@tr}]{#end}{#if SourceContext is not null} [{SourceContext}]{#end} {@m}\n{@x}",
            "theme": "Serilog.Templates.Themes.TemplateTheme::Literate, Serilog.Expressions"
          }
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs\\log.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": "30",
          "formatter": {
            "type": "Serilog.Templates.ExpressionTemplate, Serilog.Expressions",
            "template": "{@t:yyyy-MM-dd hh:mm:ss,fff} {#if @l = 'Information'}Info{#else if @l = 'Warning'}Warn{#else}{@l}{#end}{#if @tr is not null} [T-{@tr}]{#end}{#if SourceContext is not null} [{SourceContext}]{#end} {@m}\n{@x}"
          }
        }
      }
    ]
  }
}